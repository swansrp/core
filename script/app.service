[Unit]
Description=Tanya Project
After=network.target syslog.target

[Service]
Type=forking
Restart=always
RestartSec=5
LimitNOFILE=65535
PrivateTmp=true
WorkingDirectory=/root/tanya/
ExecStart=/usr/bin/bash /root/tanya/start.sh start
ExecStop=/usr/bin/bash /root/tanya/start.sh stop
ExecReload=/usr/bin/bash /root/tanya/start.sh restart
[Install]
WantedBy=multi-user.target
