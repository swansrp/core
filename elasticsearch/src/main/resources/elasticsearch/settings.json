{
  "settings": {
    "analysis": {
      "analyzer": {
        "ik_smart_stconvert_pinyin": {
          "tokenizer": "ik_smart",
          "filter": [
            "stconvert",
            "my_pinyin"
          ]
        }
      },
      "filter": {
        "stconvert": {
          "type": "stconvert",
          "convert_type": "both",
          // 可选：s2t / t2s / both
          "delimiter": ""
        },
        "my_pinyin": {
          "type": "pinyin",
          "keep_first_letter": true,
          "keep_full_pinyin": true,
          "keep_original": true,
          "limit_first_letter_length": 16,
          "lowercase": true,
          "remove_duplicated_term": true
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "ik_smart_stconvert_pinyin",
        "search_analyzer": "ik_smart_stconvert_pinyin"
      }
    }
  }
}